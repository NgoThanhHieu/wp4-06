<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
	<script src="https://unpkg.com/naja@2/dist/Naja.min.js"></script>
	<script>
 		naja.initialize();
	</script>
	<link rel="stylesheet" href="{$basePath}/css/style.css">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

	<div n:class="container">

		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

		{include content}

		{block scripts}
		<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
		{/block}

		<ul class="nav" >
    	<li><a n:href="Homepage:" class="btn btn-primary mx-2">Hlavní strana</a></li>
    	{if $user->isLoggedIn()}
       	<li><a n:href="Sign:out" class="btn btn-primary mx-2">Odhlásit</a></li>
    	{else}
			<li><a n:href="Sign:up" class="btn btn-primary mx-2">Registrovat</a></li>
        	<li><a n:href="Sign:in" class="btn btn-primary mx-2">Přihlásit</a></li>
    	{/if}
		</ul>
	</div>

</body>
</html>
