{block content}
<div>
<br>
	<p><a n:href="Homepage:default" class="btn btn-dark me-1"> zpět</a></p>
</br>
	{if ( $post->status == 'OPEN') || ($post->status == 'CLOSED') || ($post->status == 'ARCHIVED' && $user->isLoggedIn())} 
	


<h1 n:block="title">{$post->title}</h1>

<br>
	<div class="row ">
	<div class="post col-8">
	{if $post->image}
{* obrázek existuje *}
    	<img class="float-start d-block mr-3" src="{$basePath}/{$post->image}">
	{else}
{* obrázek nemá příspěvek *}

    	<img class="float-start d-block mr-3" src="{$basePath}/upload/no-image-png-2.png">
	{/if}

	</div>
	</div>
</br>

{snippet likee}
	{if $user->isLoggedIn()}
            <a n:href="like! 1, $post->id" class="ajax btn btn-{if $like == 1}success{else}secondary{/if}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-heart-eyes-fill" viewBox="0 0 16 16">
