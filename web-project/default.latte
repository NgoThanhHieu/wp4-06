{block content}
	<h1 n:block="title">Best blog ever</h1>

	{foreach $posts as $post}
	<div class="post">
		<div class="date">{$post->created_at|date:'F j, Y'}</div>

		<h2 >{$post->title}</h2>

		<div>{$post->content|truncate:256}</div>
	</div>
	{/foreach}
	<h2><a n:href="Post:show $post->id">{$post->title}</a></h2>
<br><a n:href="Edit:create" n:if="$user->isLoggedIn()">Napsat nový příspěvek</a></br>

{/block}
